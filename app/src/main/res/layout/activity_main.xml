<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".kotlin.MainActivity">

    <Button
        android:id="@+id/btn_get_simple_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择样本图片"
         />

    <ImageView
        android:id="@+id/iv_simple_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_get_simple_image"
        app:layout_constraintStart_toStartOf="@+id/btn_get_simple_image"
        app:layout_constraintTop_toBottomOf="@+id/btn_get_simple_image"
        tools:src="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="预定义的Contract"
        android:textSize="18sp"

        />

    <Button
        android:id="@+id/btn_start_activity_for_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="StartActivityForResult" />

    <Button
        android:id="@+id/btn_request_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="RequestPermission" />

    <Button
        android:id="@+id/btn_take_picture_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="TakePicturePreview" />


    <Button
        android:id="@+id/btn_capture_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="CaptureVideo" />







</LinearLayout>